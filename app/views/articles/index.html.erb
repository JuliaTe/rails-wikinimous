<h1>Articles</h1>
<ul>
  <% @articles.each do |article| %>
    <li> <h2><%= link_to article[:title], article_path(article[:id]) %></h2> <br><%= article[:content] %></li>
  <% end %>
</ul>
<h2>Submit your article</h2>
<form action="articles" method ="post">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %><input type="text" name="title" placeholder="Article title">
<input type="text" name="content" placeholder="Content">
<input type="submit" value="Submit">
</form>



